{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "mpicc build active file",
        "command": "$HOME/utility/openmpi/bin/mpicc",
        "args": [
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}",
          "-lm"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }